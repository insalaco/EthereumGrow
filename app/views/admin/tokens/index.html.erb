<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to 'Tokens', admin_tokens_path %>
  </li>
  <li class="breadcrumb-item active">Tokens</li>
</ol>
<%= link_to 'New Token', new_admin_token_path, class: "btn btn-success mb-3" %>
<div class="table-responsive">
  <table class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
	  <thead>
	    <tr>
	      <th>Token</th>
				<th>Company</th>
				<th>Ethereum Address</th>
				<th>Currency Pairs</th>
				<th>Exchanges</th>
				<th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
    <% @tokens.each do |token| %>
      <tr>
        <td><%= token.name %></td>
				<td><%= link_to token.company.name, admin_company_path(token.company) %></td>
				<td><%= link_to token.address, "https://etherscan.io/token/#{token.address}", target: "_blank" %></td>
				<td><%= token.currencies.size %></td>
				<td><%= token.exchanges.uniq.size %></td>
				<td><%= link_to 'View', admin_token_path(token) %> | <%= link_to 'Edit', edit_admin_token_path(token) %> | <%= link_to 'Delete', admin_token_path(token), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	  </tbody>
	</table>
</div>