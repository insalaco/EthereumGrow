<%= form_for [:admin, token] do |f| %>
  <% if token.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(token.errors.count, "error") %> prohibited this token from being saved:</h2>

      <ul>
      <% token.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control col-md-3" %>
  </div>
	
  <div class="form-group">
    <%= f.label :address, 'Ethereum Token Address' %>
    <%= f.text_field :address, class: "form-control col-md-10" %>
  </div>
	<div class="form-group">
		<%= f.label :company %>
		<%= f.collection_select :company_id, Company.where(dapp: true).order(:name), :id, :name, {:prompt => 'Choose Company'}, { class: 'col-md-6 form-control' } %>
	</div>
	<hr>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %> <%= link_to 'Cancel', :back, class: "btn btn-danger my-3 col-md-3"%>
  </div>
<% end %>
