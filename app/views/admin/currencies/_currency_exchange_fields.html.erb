<div class="control-group nested-fields" style="padding-bottom: 20px;">
  <div class="controls row pb-4">
		<div class="col-md-8">
			<%= f.label :profile, "Show Chart on Profile"%>
    	<%= f.check_box :profile, class: "form-control" %>
		</div>
	</div>
	<div class="row">
	
	
		<div class="col-md-5">
	    
			<%= f.collection_select :exchange_id, Exchange.order(:name), :id, :name, {:prompt => 'Choose Exchange'}, { class: 'form-control' } %>
	    
		</div>		
		<div class="col-md-2">
			<%= link_to_remove_association "remove exchange", f, class: "btn btn-danger btn-sm" %>
		</div>
	</div>
</div>