
  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'Companies', admin_companies_path %>
    </li>
    <li class="breadcrumb-item active">Companies</li>
  </ol>
	<%= link_to 'New Company', new_admin_company_path, class: "btn btn-success mb-3" %>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
					<th>Dapp</th>
					<th>EEA Member</th>
          <th>Published</th>
					<th>Actions</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Name</th>
          <th>Description</th>
					<th>Dapp</th>
					<th>EEA Member</th>
          <th>Published</th>
					<th>Actions</th>
        </tr>
      </tfoot>
      <tbody>
				<% @companies.each do |company|%>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.description %></td>
					<td><%= company.dapp %>
					<td><%= company.alliance %>
          <td><%= company.published %></td>
					<td><%= link_to 'View', admin_company_path(company) %> | <%= link_to 'Edit', edit_admin_company_path(company) %> | <%= link_to 'Delete', admin_company_path(company), method: :destroy, data: { confirm: 'Are you sure?' } %> </td>
        </tr>
				<% end %>
      </tbody>
    </table>
	</div>
