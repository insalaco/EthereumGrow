<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Website</th>
      <th>Twitter</th>
      <th>Facebook</th>
      <th>Linkedin</th>
      <th>Slack</th>
      <th>Telegram</th>
      <th>Github</th>
      <th>Trading view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location %></td>
        <td><%= company.website %></td>
        <td><%= company.twitter %></td>
        <td><%= company.facebook %></td>
        <td><%= company.linkedin %></td>
        <td><%= company.slack %></td>
        <td><%= company.telegram %></td>
        <td><%= company.github %></td>
        <td><%= company.trading_view %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

