<div class="wrapper">
	<div class="page-header page-header-xs" data-parallax="true" style="background-image: url(/assets/<%= @company.image %>);">
		<div class="filter"></div>
	</div>
	<div class="section profile-content">
		<div class="container">
			<div class="owner">
				<div class="avatar">
					<img src="/assets/<%= @company.avatar %>" alt="Circle Image" class="img-circle img-no-padding img-responsive">
				</div>
				<div class="name">
					<h4 class="title"><%= @company.name %> <small><strong>(<%= @company.asset %>)</strong><br />$<%= number_to_human(@company.ico_size, strip_insignificant_zeros: true, precision: 5) %> MM ICO</small></h4>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 offset-md-3 text-center">
          <p><%= @company.description %> </p>
          <br />
					<%= link_to "#{@company.white_paper}", class: "btn btn-outline-default btn-round", target: "_blank" do %>
					<i class="fa fa-paper-plane"></i> White paper
					<% end %>
					<%= link_to "#{@company.website}", class: "btn btn-outline-default btn-round", target: "_blank" do %>
					<i class="fa fa-globe"></i> Website
					<% end %>
				</div>
			</div>
			<% if @company.video.present? %>
			<div class="row">
				<div class="col-md-8 offset-md-2 pt-4">
					<div class="embed-responsive embed-responsive-16by9">					
  					<iframe class="embed-responsive-item" src="<%= @company.video %>" allowfullscreen></iframe>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>