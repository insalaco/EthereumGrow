<div class="page-header" data-parallax="true" style="background-image: url(/assets/home.jpg);">
	<div class="filter"></div>
		<div class="container">
	    <div class="motto text-center">
				<h1>EthereumGrow</h1>
				<h3>Cryptocurrency Assets</h3>
	    </div>
		</div>
	</div>
	<div class="main">
		<div class="section text-center">
			<div class="container">
				<div class="row">
					<div class="col-md-8 offset-md-2">
						<h2 class="title">Let's talk ICOs</h2>
						<h5 class="description">This is the paragraph where you can write more details about your product. Keep you user engaged by providing meaningful information. Remember that by this time, the user is curious, otherwise he wouldn't scroll to get here. Add a button if you want the user to see more.</h5>
					</div>
				</div>
				<br/><br/>
				<div class="row">
					<% @companies.each do |company| %>
					<div class="col-md-4">
						<div class="info">
							
							<div class="card-deck">
							  <div class="card">
									<%= image_tag company.image, class: "card-img-top img-responsive", style: "width: 100%", alt: "" if company.image? %>
							    <div class="card-block">
							      <h4 class="card-title"><%= company.name %> (<%= company.asset %>) </h4>

							      <p class="card-text"><%= company.description %></p>
										<hr>
							      <p class="card-text"><small class="text-muted">$<%= company.ico_size %> MM ICO</small></p>
										<p class="card-text"><strong> <%= pluralize(company.exchange_count, "exchange") %></strong> </p>
										<%= link_to "View Details", company_path(company), class: "btn btn-info btn-round mt-2"%>
							    </div>
							  </div>
							</div>
							
						</div>
    			</div>
					<% end %>
					
				</div>
				<%= link_to "View All", companies_path, class: "btn btn-danger btn-round text-center mb-4" %>
			</div>
			<div class="section section-dark text-center">
